<h1>Make a ROBOT</h1>

<%= form_for :robot, url: robots_path do |f| %>
  
  <% if @robot.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@robot.errors.count, "error") %> prohibited
        this robot from being saved:
      </h2>
      <ul>
        <% @robot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :creator %><br>
    <%= f.text_field :creator %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', robots_path %>